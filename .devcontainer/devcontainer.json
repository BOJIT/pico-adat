{
    "name": "pico-sdk",
    "image": "bojit/pico-sdk:1.5.0",
    "runArgs": [
        "--network=host"
    ],
    "containerEnv": {
        "PROJECT": "${localWorkspaceFolder}"
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-vscode.cpptools",
                "ms-vscode.cmake-tools",
                "marus25.cortex-debug",
                "actboy168.tasks",
                "cschlosser.doxdocgen"
            ],
            "settings": {
                "cmake.statusbar.advanced": {
                    "debug": {
                        "visibility": "hidden"
                    },
                    "launch": {
                        "visibility": "hidden"
                    },
                    "build": {
                        "visibility": "default"
                    },
                    "buildTarget": {
                        "visibility": "hidden"
                    }
                }
            }
        }
    }
}
